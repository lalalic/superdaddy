<?xml version='1.0' encoding='utf-8'?>
<widget id="lalalic.superdaddy.tv" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>爸爸在</name>
    <description>
        陪娃娃快乐成长
    </description>
    <author email="lalalic@139.com">
        lalalic
    </author>
    <content src="cordova.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <plugin name="cordova-plugin-file" spec="4.2.0" />
    <plugin name="cordova-sqlite-storage" spec="1.4.6" />
    <plugin name="com.hughisaacs2.cordova.plugins.androidtvplugin"
           spec="https://github.com/hughisaacs2/Cordova-Android-TV-Plugin.git" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/images/icon.png" />
</widget>
