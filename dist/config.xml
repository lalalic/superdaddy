<?xml version='1.0' encoding='utf-8'?>
<widget id="lalalic.superdaddy" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>超级奶爸</name>
    <description>
        陪娃娃快乐成长
    </description>
    <author email="lalalic@139.com">
        lalalic
    </author>
    <content src="cordova.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-file" />
    <plugin name="Cordova-sqlite-storage" />
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-camera" />
    <plugin name="cordova-plugin-wechat">
        <variable name="APP_ID" value="xx" />
    </plugin>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icon.png"/>
	<hook type="before_prepare" src="../scripts/icon.js" />
</widget>
